<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eaeaea">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dosya Seç,Foto Çek,Paylaş" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >


        <ImageButton
            android:id="@+id/galleryselect"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:paddingRight="100sp"
            android:background="@drawable/newgallerchoose"


            android:clickable="true"

            />

        <ImageButton
            android:id="@+id/newphoto"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@drawable/gallerychoose"
            android:paddingRight="100sp"

            android:clickable="true"

            />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@drawable/share"


            android:clickable="true"

            />
    </LinearLayout>


    <ImageView
        android:id="@+id/preview"
        android:layout_width="428dp"
        android:layout_height="286dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/upload_file_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Yükle"
        android:textColor="@android:color/white" />
</LinearLayout>
